<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="8sp"
	android:id="@+id/base"
	android:background="@drawable/background">
	<ScrollView
		android:id="@+id/buttonscroll"
		android:layout_width="match_parent"
		android:layout_height="0sp"
		android:layout_weight="1">
		<LinearLayout
			android:id="@+id/buttonholder"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<Button
				android:id="@+id/emerno"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/transparent"
				android:text="@string/emergency_numbers"
				android:textSize="27sp"
				android:textColor="#03A9F4"/>
			<LinearLayout
				android:id="@+id/moodleholder"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<Button
					android:id="@+id/moodle"
					android:layout_width="0sp"
					android:layout_height="wrap_content"
					android:background="@android:color/transparent"
					android:text="Moodle"
					android:textSize="27sp"
					android:textColor="#03A9F4"
					android:layout_weight="1"/>
				<Button
					android:id="@+id/splcourse"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8sp"
					android:background="@android:color/transparent"
					android:textSize="22sp"
					android:textColor="#03A9F4"/>
			</LinearLayout>
			<Button
				android:id="@+id/erp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/transparent"
				android:text="ERP"
				android:textSize="27sp"
				android:textColor="#03A9F4"/>
			<Button
				android:id="@+id/koha"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/transparent"
				android:text="Koha"
				android:textSize="27sp"
				android:textColor="#03A9F4"/>
			<Button
				android:id="@+id/jupyter"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8sp"
				android:background="@android:color/transparent"
				android:text="Jupyter"
				android:textSize="27sp"
				android:textColor="#03A9F4"/>
			<Button
				android:id="@+id/webmail"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/transparent"
				android:text="Webmail"
				android:textSize="27sp"
				android:textColor="#03A9F4"/>
			<Button
				android:id="@+id/feedback"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8sp"
				android:background="@android:color/transparent"
				android:text="Feedback"
				android:textSize="27sp"
				android:textColor="#03A9F4"/>
			<Button
				android:id="@+id/iisermap"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/transparent"
				android:text="IISER Map"
				android:textSize="27sp"
				android:textColor="#03A9F4"/>
		</LinearLayout>
	</ScrollView>
	<LinearLayout
		android:id="@+id/imageholder"
		android:layout_width="match_parent"
		android:layout_height="50sp"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/wifipass"
			android:layout_width="0sp"
			android:layout_height="match_parent"
			android:src="@drawable/wifipassword"
			android:scaleType="fitCenter"
			android:layout_weight="1"
			android:contentDescription="wifiPasswordButton"/>
		<ImageView
			android:id="@+id/drive"
			android:layout_width="0sp"
			android:layout_height="match_parent"
			android:src="@drawable/drive"
			android:scaleType="fitCenter"
			android:layout_weight="1"
			android:contentDescription="driveButton"/>
		<ImageView
			android:id="@+id/mailinfo"
			android:layout_width="0sp"
			android:layout_height="match_parent"
			android:src="@drawable/mail"
			android:scaleType="fitCenter"
			android:layout_weight="1"
			android:contentDescription="mailSetButton"/>
		<ImageView
			android:id="@+id/upi"
			android:layout_width="0sp"
			android:layout_height="match_parent"
			android:src="@drawable/upi"
			android:scaleType="fitCenter"
			android:layout_weight="1"
			android:contentDescription="upiButton"/>
		<ImageView
			android:id="@+id/settings"
			android:layout_width="0sp"
			android:layout_height="match_parent"
			android:src="@drawable/settings"
			android:scaleType="fitCenter"
			android:layout_weight="1"
			android:contentDescription="settingsButton"/>
	</LinearLayout>
</LinearLayout>
