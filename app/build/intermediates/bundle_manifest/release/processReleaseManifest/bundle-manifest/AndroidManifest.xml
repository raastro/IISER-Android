<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dhruva.iiser"
    android:versionCode="1"
    android:versionName="1.4" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="28" />

    <uses-feature
        android:name="android.hardware.fingerprint"
        android:required="false" />

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC " />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Step 1: Add the following permission to the app -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:icon="@drawable/app_icon"
        android:label="IISER-M"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.dhruva.iiser.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dhruva.iiser.MainActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.dhruva.iiser.SettingsActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/FullScreen" />
        <activity
            android:name="com.dhruva.iiser.InfoActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/NoStatusBar" />
        <activity
            android:name="com.dhruva.iiser.WebwiewActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/NoActionBar" />
    </application>

</manifest>